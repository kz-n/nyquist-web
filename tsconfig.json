{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "outDir": "dist/public",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
